<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0"> <!-- Changed to noupdate="0" for testing -->
        <!-- Hold Stage -->
        <record id="project_task_stage_hold" model="project.task.type">
            <field name="sequence">35</field>
            <field name="name">Hold</field>
            <field name="fold">false</field>
            <field name="description">Task is currently on hold</field>
            <field name="state">hold</field>
            <field name="legend_blocked">This task is on hold</field>
            <field name="legend_done">Task was completed while on hold</field>
            <field name="legend_normal">This task is on hold</field>
            <field name="project_ids" eval="[(6, 0, [])]"/> <!-- Available for all projects -->
        </record>

        <!-- Pending Stage -->
        <record id="project_task_stage_pending" model="project.task.type">
            <field name="sequence">45</field>
            <field name="name">Pending</field>
            <field name="fold">false</field>
            <field name="description">Task is pending for external input</field>
            <field name="state">pending</field>
            <field name="legend_blocked">This task is pending</field>
            <field name="legend_done">Task was completed while pending</field>
            <field name="legend_normal">This task is pending</field>
            <field name="project_ids" eval="[(6, 0, [])]"/> <!-- Available for all projects -->
        </record>
    </data>
</odoo>
