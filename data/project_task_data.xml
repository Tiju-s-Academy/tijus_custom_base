<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Hold Stage -->
        <record id="project_task_stage_hold" model="project.task.type">
            <field name="sequence">35</field>
            <field name="name">Hold</field>
            <field name="fold">false</field>
            <field name="description">Task is currently on hold</field>
            <field name="mail_template_id" eval="False"/>
            <field name="state">blocked</field>
            <field name="project_ids" eval="[(4, False, 0)]"/> <!-- Makes stage available for all projects -->
        </record>

        <!-- Pending Stage -->
        <record id="project_task_stage_pending" model="project.task.type">
            <field name="sequence">45</field>
            <field name="name">Pending</field>
            <field name="fold">false</field>
            <field name="description">Task is pending for external input</field>
            <field name="mail_template_id" eval="False"/>
            <field name="state">pending</field>
            <field name="project_ids" eval="[(4, False, 0)]"/> <!-- Makes stage available for all projects -->
        </record>
    </data>
</odoo>
